{
    "name": "nbayramberdiyev/slim-4-starter",
    "type": "project",
    "description": "An opinionated starter template for a simple PHP application built on Slim Framework 4.",
    "keywords": [
        "slim",
        "slimframework",
        "slimphp",
        "skeleton",
        "template",
        "starter"
    ],
    "authors": [
        {
            "name": "N'Bayramberdiyev",
            "email": "nbayramberdiyev@outlook.com",
            "homepage": "https://nbayramberdiyev.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "php-di/php-di": "^6.3",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "slim/twig-view": "^3.3",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.0",
        "vimeo/psalm": "^4.18",
        "zeuxisoo/slim-whoops": "^0.7.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyze": [
            "@analyze:phpstan",
            "@analyze:psalm"
        ],
        "analyze:phpstan": "./vendor/bin/phpstan analyse --memory-limit 1G",
        "analyze:psalm": "./vendor/bin/psalm",
        "serve": "@php -S localhost:0 -t public",
        "test": "./vendor/bin/phpunit --testdox"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
