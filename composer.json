{
    "name": "nbayramberdiyev/slim-4-starter",
    "type": "project",
    "description": "A skeleton for a simple PHP application built on Slim Framework 4.",
    "keywords": ["slim","framework","slimframework","slimphp"],
    "authors": [
        {
            "name": "N'Bayramberdiyev",
            "email": "nbayramberdiyev@outlook.com",
            "homepage": "https://nbayramberdiyev.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "slim/slim": "^4.9",
        "slim/psr7": "^1.5",
        "php-di/php-di": "^6.3",
        "slim/twig-view": "^3.3",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0",
        "zeuxisoo/slim-whoops": "^0.7.3",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox"
    }
}
